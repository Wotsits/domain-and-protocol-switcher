{
    "name": "Domain and Protocol Switcher",
    "author": "Simon Sexton",  
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "128": "icons/icon-128.png"
      }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "128": "icons/icon-128.png"
    },
    "host_permissions": ["https://*/*","http://*/*"]
  } 